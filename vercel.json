{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/(styles\\.css|.*-script\\.js|.*\\.html|.*\\.png|.*\\.jpg|.*\\.jpeg|.*\\.gif|.*\\.svg|.*\\.ico|favicon\\.ico)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/server.js" }
  ]
}
