# Neon Postgres Database
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# サーバー設定
PORT=3000

# IP制限設定（カンマ区切りで複数指定可能、CIDR記法もサポート）
# 例: ALLOWED_IPS=192.168.1.100,10.0.0.0/8,203.0.113.0/24
ALLOWED_IPS=

# JWT設定
JWT_SECRET="your-jwt-secret-key"

# Shopify API設定
SHOPIFY_SHOP_NAME=your-shop-name.myshopify.com
SHOPIFY_ADMIN_ACCESS_TOKEN=your-admin-api-access-token
SHOPIFY_API_VERSION=2026-01
SHOPIFY_WEBHOOK_SECRET=your-webhook-signing-secret

# チェックイン機能設定（fitness-appと同じ値を設定）
CHECKIN_SALT=your-shared-secret-key-for-checkin

# Google SSO設定
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Cache clear API secret
APP_CACHE_CLEAR_URL=your-cache-clear-url
APP_CACHE_CLEAR_SECRET=your-cache-clear-secret